unit UFuncoes;

interface

function Criptografia(Senha, Chave: String): String;

implementation

uses
   Windows, Messages, Dialogs, SysUtils, StrUtils;

function Criptografia(Senha, Chave: String): String;
var
   x, y: Integer;
   NovaSenha: String;
begin
   for x := 1 to Length(Chave) do
   begin
      NovaSenha := '';

      for y := 1 to Length(Senha) do
      begin
         NovaSenha := NovaSenha + Chr((Ord(Chave[x]) xor Ord(Senha[y])));
      end;

      Senha := NovaSenha;
   end;

   Result := Senha;
end;

end.
